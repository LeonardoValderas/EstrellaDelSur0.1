<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="250dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    card_view:contentPaddingLeft="-3dp"
    card_view:contentPaddingRight="-3dp"
    card_view:contentPaddingTop="-3dp"
    card_view:contentPaddingBottom="-3dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp">


    <LinearLayout
        android:id="@+id/recyclerCargaList"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pelota_futbol" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="SubModulos" />
    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>