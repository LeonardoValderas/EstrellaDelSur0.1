<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageJugador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@mipmap/ic_foto_galery" />

        <EditText
            android:id="@+id/jugadoresNombreEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="25dp"
            android:gravity="center"
            android:hint="Nombre" >

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/jugadoresDivisionSpinner"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/style_spinner"
            android:layout_height="50dp" />

        <Spinner
            android:id="@+id/jugadoresPosicionSpinner"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/style_spinner"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/comisionPuestoImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_pelota_futbol"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>