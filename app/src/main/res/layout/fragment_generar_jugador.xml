<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".miequipo.tabs_general.TabsJugador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageJugador"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/border_circle"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@mipmap/ic_foto_galery"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />


        <EditText
            android:id="@+id/jugadoresNombreEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30dp"
            android:gravity="center"
            android:hint="Nombre" >

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/jugadoresDivisionSpinner"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/style_spinner"
            android:layout_height="50dp" />

        <Spinner
            android:id="@+id/jugadoresPosicionSpinner"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/style_spinner"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/comisionPuestoImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_pelota_futbol"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>