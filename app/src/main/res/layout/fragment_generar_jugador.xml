<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    tools:context=".miequipo.administrador.tabs_general.TabsJugador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageJugador"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:src="@mipmap/ic_foto_galery"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <EditText
            android:id="@+id/jugadoresNombreEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Nombre"
            android:maxLength="20"
            android:textSize="12dp">

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/jugadoresDivisionSpinner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/style_spinner" />

        <Spinner
            android:id="@+id/jugadoresPosicionSpinner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/style_spinner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/comisionPuestoImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_pelota_futbol"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>