<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.estrelladelsur.fragments.fragmentresultado" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/fixtureDivisionSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/fixtureTorneoSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/fixtureFechaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/fixtureAnioSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <Spinner
                android:id="@+id/fixtureCanchaSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp" 
                android:spinnerMode="dialog"/>

            <Spinner
                android:id="@+id/fixtureLocalSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/fixtureVisitaSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_dia"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="DÃ­a" />

                <Button
                    android:id="@+id/btn_hora"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Hora" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>